---
const date = new Date();
let year = date.getFullYear();

const isIndexPage = Astro.url.pathname === "/";
---

{
  isIndexPage ? (
    <footer class="index">
      <span>
        Copyright © {year} Dhrego.
        <br /> All rights reserved
      </span>
      <a class="icon" href="https://github.com/Dhrego" target="_blank">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-github"
        >
          <>
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
            <path d="M9 18c-4.51 2-5-2-7-2" />
          </>
        </svg>
      </a>
    </footer>
  ) : (
    <footer>
      <span>© {year} Dhrego. All rights reserved. version 2023.11.02/1</span>
    </footer>
  )
}

<style>
  footer.index {
    padding: 20px;
    position: relative;
    height: 120px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    color: rgba(255, 255, 255, 0.7);
    transition: color 2s ease;
    font-size: 14px;
    letter-spacing: 1px;
    overflow: hidden;
  }

  footer.index span {
    text-align: center;
  }

  footer {
    display: flex;
    justify-content: center;
    color: var(--base-color);
    transition: color 2s ease;
    font-size: 14px;
    letter-spacing: 1px;
    width: 100%;
    padding-bottom: 10px;
  }

  footer.index::after {
    content: "";
    position: absolute;
    background: transparent;
    width: 200%;
    aspect-ratio: 1 / 0.7;
    border-radius: 50%;
    border-top: 1px solid rgba(244, 244, 244, 0.4);
    top: 0;
    z-index: -1;
  }

  .icon {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 5px 15px;
    border: 1px solid #6b7077;
    border-radius: 30px;
    transition: 0.3s ease;
    cursor: pointer;
    color: inherit;
  }

  .icon:hover {
    background: #6b7077d3;
    color: #fff;
  }

  @media only screen and (max-width: 768px) {
    footer {
      font-size: 14px;
    }

    footer.index {
      padding: 15px;
      height: auto;
      justify-content: unset;
      gap: 10px;
    }

    footer.index::after {
      border-radius: 0%;
    }
  }

  @media only screen and (max-width: 480px) {
    footer {
      font-size: 12px;
    }
  }
</style>
