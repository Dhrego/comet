---
// const fonts = await Astro.glob("../fonts/*.woff2");
const fonts = Object.values(
  import.meta.glob("../fonts/*.woff2", { eager: true })
);
---

<>
  {
    fonts.map((font: any) => (
      <link
        rel="preload"
        as="font"
        href={font.default}
        type={`font/${font.default.split(".").pop()}`}
        crossorigin="anonymous"
      />
    ))
  }
</>
