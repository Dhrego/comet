---
const navlinks = ["Home", "Projects", "Contact"];
---

<nav>
  <div>
    <img class="logo" src="logo0.png" alt="" srcset="" />
  </div>
  <div class="nav-list" style="">
    <ul class="nav-links">
      {navlinks.map((navlink) => <li>{navlink}</li>)}
    </ul>
  </div>

  <div class="hamburger-menu">
    <span></span>
    <span></span>
    <span></span>
  </div>
</nav>
<style>
  nav {
    display: flex;
    justify-content: space-between;
    border-radius: 0 0 16px 16px;
    width: 80vw;
    margin: 0 auto;
    position: sticky;
    top: 0;
  }
  .nav-list {
    display: flex;
    align-items: center;
  }
  .nav-links {
    color: var(--base-color);
    padding: 0 1rem;
    list-style: none;
    display: flex;
    gap: 2rem;
  }
  .logo {
    max-width: 50px;
    margin: 0.5rem;
  }
  span {
    margin: 2px 0;
    background-color: var(--base-color);
    height: 2px;
    width: 20px;
    transition: 0.3s;
  }
  .hamburger-menu {
    display: none;
    position: relative;
  }
  @media screen and (max-width: 530px) {
    nav {
      border-radius: 0;
      width: 100%;
    }
    .nav-links {
      display: none;
    }
    .hamburger-menu {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
  }
</style>
