  .circle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    width: 600px;
    height: 600px;
    z-index: -3;
    border-radius: 50%;
    background-color: var(--base-color);
    transition: background 2s ease;
  }

  .circle.open {
    transform: translate(-50%, -50%) scale(1);
    transition:
      background 2s ease,
      transform 1s ease-out 0.5s;
  }

  .nav-links {
    margin-left: 45px;
    font-family: "Jolly Lodger";
    color: #fff;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease;
    font-size: 10vw;
    padding: 0 1rem;
    text-transform: uppercase;
    list-style: none;
    /* display: flex; */
  }

  .koko {
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.5);
    width: 100vw;
    height: 0;
    z-index: 999;
    /* transition: height 1s cubic-bezier(0.76, 0, 0.24, 1); */
    transition: height 1s cubic-bezier(0.25, 0.1, 0.25, 1);
    /* transition: transform 0.8s ease; */
    display: flex;
    align-items: center;
    /* backdrop-filter: blur(150px) saturate(1.5); */
  }

  .overlay {
    height: 0;
    position: relative;
    /* background-color: rgba(0, 0, 0, 0.9); */
    background-color: rgba(0, 0, 0, 0.5);
    width: 100vw;
    height: 100%;
    z-index: 999;
    transition: height 0.8s ease;
    display: flex;
    align-items: center;
    backdrop-filter: blur(150px) saturate(1.5);
  }

  .koko.active {
    height: 100vh;
  }

  .koko.active .overlay .nav-links {
    transition-delay: 0.55s;
    visibility: visible;
    opacity: 1;
  }
