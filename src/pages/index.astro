---
import Layout from "../layouts/Layout.astro";
import Loader from "../components/Loader.astro";
import Loader2 from "../components/Loader2.astro";
---

<Layout title="Home">
  <div class="container">
    <main>
      <!-- <div class="glassCard"></div> -->
      <!-- <div id="circle" class="circle"></div> -->

      <div class="svg">
        <img src="blend.svg" alt="" srcset="" />
      </div>

      <span class="sub">introducing</span>
      <div class="hero">andrea</div>
      <div class="desc">SOFTWARE DEVELOPER AND UI/UX DESIGNER</div>
    </main>
  </div>
  <!-- <Loader /> -->
  <Loader2 />
</Layout>

<style>
  .hero {
    position: absolute;
    top: 30%;
    left: 50%;
    transform: translateX(-50%);
    font-size: 200px;
    background: rgb(255, 255, 255);
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.9) 0%,
      rgba(153, 153, 153, 0.7) 77%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    z-index: -1;
    font-family: var(--font-Exp-Black);
    text-transform: uppercase;
  }

  .desc {
    position: absolute;
    top: 50%;
    font-size: 18px;
    font-family: var(--font-Regular);
    left: 55%;
    opacity: 0.8;
    margin-top: 8px;
    color: var(--white);
    z-index: -1;
  }

  .sub {
    position: absolute;
    top: 25%;
    left: 50%;
    transform: translateX(-50%);
    font-size: 16px;
    font-family: var(--font-Light);
    opacity: 0.5;
    color: var(--white);
    z-index: -1;
  }

  .svg {
    position: absolute;
    top: 25%;
    left: 15%;
    z-index: -1;
    max-width: 50px;
  }
  .svg img {
    width: 100%;
  }

  main {
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .circle {
    position: absolute;
    z-index: -2;
    width: 600px;
    height: 600px;
    border-radius: 50%;
    background-color: var(--base-color);
    transition: background 2s ease;
  }

  .glassCard {
    z-index: -1;
    width: 420px;
    height: 660px;
    background: rgba(255, 255, 255, 0.2);
    /* background: rgba(0, 0, 0, 0.2);  when on light theme*/
    stroke-width: 3px;
    stroke: #fff;
    backdrop-filter: blur(15px);
    border-radius: 2rem;
  }

