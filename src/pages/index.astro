<script>
  import $ from "jquery";
  import { gsap } from "gsap";

  const scrollCarousel = (direction: string, carousel: any) => {
    let currentPosition = carousel.scrollLeft();
    let scrollAmount = {
      prev: -343,
      next: 343,
    };

    gsap.to(carousel, {
      scrollLeft: currentPosition + scrollAmount[direction],
      ease: "power1.inOut",
      onUpdate: updateScrollPercentage,
    });
  };

  const updateScrollPercentage = () => {
    const carousel = $(".block-cards")[0];
    const scrollLeft = carousel.scrollLeft;
    const scrollWidth = carousel.scrollWidth;
    const clientWidth = carousel.clientWidth;

    const scrollPercentage = (scrollLeft / (scrollWidth - clientWidth)) * 100;

    gsap.to($(".progress-bar-inner"), {
      duration: 0,
      ease: "power1.inOut",
      width: `${scrollPercentage || 1}%`,
    });
  };

  $(".prev, .next").on("click", function () {
    const carousel = $(".block-cards");
    const direction = $(this).hasClass("prev") ? "prev" : "next";
    scrollCarousel(direction, carousel);
  });

  updateScrollPercentage();

  //SCROLL TIP ANIMATION
  $(window).on("scroll", function () {
    if ($(this).scrollTop() > 0) {
      gsap.to(".scroll, .text", {
        opacity: 0,
        duration: 0.1,
        ease: "power1.in",
        onComplete: () => {
          gsap.set(".scroll, .text", {
            delay: 0.2,
            visibility: "hidden",
          });
        },
      });
    } else if ($(this).scrollTop() === 0) {
      gsap.to(".scroll, .text", {
        visibility: "visible",
        opacity: 1,
        ease: "power1.in",
        duration: 0.4,
      });
    }
  });
</script>
