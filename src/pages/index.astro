>
  <!-- <Loader2 /> -->
  <div class="container">
    <main>
      <DreamyGradient
        size={{ height: "10rem", width: "10rem" }}
        color={"linear-gradient(#FF512F, #DD2476)"}
        position={{ left: "0", top: "50%" }}
        blur={6}
        borderRadius="50%"
        zIndex="1"
        client:only="react"
      />

      <div class="hero">
        <div class="hero-intro">
          <span>
            <img src="Star.svg" alt="" srcset="" />
