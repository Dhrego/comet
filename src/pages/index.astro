  <!-- <Loader /> -->
</Layout>

<style>
  body {
    background-color: var(--bg-color-alt);
  }

  .hero {
    position: absolute;
    top: calc(50% - 66.38px);
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--white);
    user-select: none;
  }

  .hero-intro {
    text-align: center;
    font-size: clamp(13px, 2vw, 16px);
    font-family: var(--font-Regular);
    color: #808080;
  }

  .hero-main {
    position: relative;
    font-size: clamp(60px, 15vw, 200px);
    background: rgb(255, 255, 255);
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.9) 0%,
      rgba(153, 153, 153, 0.7) 77%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: var(--font-Exp-Black);
    text-transform: uppercase;
  }

  .hero-sub {
    text-align: end;
    text-transform: uppercase;
    font-size: clamp(13px, 2vw, 16px);
    font-family: var(--font-Light);
    opacity: 0.5;
    color: var(--white);
  }

  main {
    height: 100%;
  }

  .blend_1 {
    position: absolute;
    top: -150px;
    left: -120px;
  }

  .blend_2 {
    position: absolute;
    bottom: 150px;
    right: 120px;
  }
</style>
