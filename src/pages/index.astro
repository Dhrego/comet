---
import Layout from "../layouts/Layout.astro";
import Loader from "../components/Loader.astro";
import Loader2 from "../components/Loader2.astro";
import { DreamyGradient } from "@muridot0/dreamy-gradients";
---

<Layout
  title="Hello 👋🏾"
  description="Dive into Creativity 🌊: Immerse yourself in my projects and artworks."
>
  <!-- <Loader2 /> -->
  <div class="container">
    <main>
      <DreamyGradient
        size={{ height: "241px", width: "241px" }}
        color="linear-gradient(#FF512F, #DD2476)"
        position={{ left: "388px", top: "100px" }}
        blur={5}
        borderRadius="50%"
        client:only="react"
      />
      <div class="hero">
        <div class="hero-intro">
          <span>
            <img src="Star.svg" alt="" srcset="" />
          </span>
          <span>introducing</span>
          <span>
            <img src="Star.svg" alt="" srcset="" />
          </span>
        </div>
        <div class="hero-main">andrea</div>
        <div class="hero-sub">software developer and ui/ux designer</div>
      </div>
    </main>
  </div>
  <!-- <Loader /> -->
</Layout>

<style>
  body {
    background-color: var(--bg-color-alt);
  }

  .hero {
    position: absolute;
    top: calc(50% - 66.38px);
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--white);
    user-select: none;
  }

  .hero-intro {
    text-align: center;
    font-size: clamp(13px, 2vw, 16px);
    font-family: var(--font-Regular);
    color: #808080;
  }

  .hero-main {
    font-size: clamp(60px, 15vw, 200px);
    background: rgb(255, 255, 255);
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.9) 0%,
      rgba(153, 153, 153, 0.7) 77%
    );
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: var(--font-Exp-Black);
    text-transform: uppercase;
  }

  .hero-sub {
    text-align: end;
    text-transform: uppercase;
    font-size: clamp(13px, 2vw, 16px);
    font-family: var(--font-Light);
    opacity: 0.5;
    color: var(--white);
  }

  main {
    height: 100%;
  }
</style>
