<style>
  body {
    background-color: #fff;
  }

  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    /* justify-content: space-evenly; */
    justify-content: center;
    gap: 30px;
  }

  .container {
    display: flex;
    justify-content: center;
    align-items: center;
    font-family: var(--font-Regular);
    text-align: center;
  }

  h1 {
    font-size: 25rem;
    color: var(--white);
  }

  p {
    font-size: 1.5rem;
  }

  a {
    font-size: 1rem;
  }

  .return a {
    padding: 20px 40px;
    border-radius: 50px;
    border: 1px solid black;
    transition: color 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: #001c30;
    color: rgba(255, 255, 255, 0.8);
  }

  .return a:hover {
    /* background-color: #001c30; */
    color: rgb(255, 255, 255);
  }

  .return a svg path {
    transition: fill 0.3s ease;
  }

  .return a svg {
    transition: transform 0.3s ease;
  }

  .return a:hover svg {
    transform: translateX(-8px);
  }

  .return a:hover svg path {
    fill: #fff;
  }

  span svg {
    display: flex;
    align-items: center;
  }

  .error,
  .subtitle,
  .return {
    opacity: 0;
  }
</style>

<script>
  import gsap from "gsap";
  import $ from "jquery";

  $(window).on("load", function () {
    console.log("hello");

    const tl = gsap.timeline();

    tl.set(".error", { opacity: 0 });

    tl.fromTo(
      ".error",
      { y: "-120%", opacity: 0 },
      {
        duration: 1,
        opacity: 1,
        y: 0,
        stagger: 0.2,
        ease: "power2.out",
      }
    );
    tl.fromTo(
      ".subtitle",
      { opacity: 0 },
      { duration: 1, opacity: 1, ease: "power1.in" },
      "-=.5"
    );
    tl.fromTo(
      ".return",
      { opacity: 0 },
      { duration: 1, opacity: 1, ease: "power2.in" },
      "-=.75"
    );
  });
</script>
