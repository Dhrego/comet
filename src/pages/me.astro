<script>
  import $ from "jquery";

  let linkActive = $(".sub-link.active").attr("id");
  $(".block").not(`[data-id="${linkActive}"]`).hide();

  $(document).ready(function () {
    let link: any;
    $(".sub-link ").on("click", function () {
      $(".sub-link ").removeClass("active");
      $(this).addClass("active");
      link = $(this).attr("id");
      $(".block").hide();
      $(`.block[data-id="${link}"]`).show();
    });
  });
</script>
