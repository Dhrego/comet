---
// import Loader2 from "../components/Loader2.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Me">
  <div class="container">
    <main>
      <div class="me">
        Greetings, everyone! Allow me the honor of introducing myself. My name
        is Andrea, and it is a true pleasure to meet all of you!
      </div>
    </main>
  </div>
</Layout>

<style>
  body {
    background-color: #0e100f;
  }
  main {
    color: #fff;
    min-height: calc(100vh - 88.88px);
    height: 100%;
    display: flex;
    /* align-items: center; */
    justify-content: center;
  }

  .me {
    font-family: var(--font-Regular);
    font-size: 32px;
    width: 80vw;
    margin-top: 100px;
  }
</style>
